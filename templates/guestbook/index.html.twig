{% extends 'base.html.twig' %}

{% block title %}Hello, Welcome to My Chat Page!{% endblock %}

{% block body %}
    <div class="container">
        {% if error %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}
        <p>{{ form(form11) }}</p>
        <h1>Hello! </h1>
        This friendly message is coming from:
        <div class="example-wrapper">
            <table class="table table-hover">
               <thead>
                 <tr>
                   <th>Firstname</th>
                   <th>Lastname</th>
                   <th>Email</th>
                   <th></th>
                   <th></th>
                 </tr>
               </thead>
               <tbody>
                {% for chats in chat %}
                    <tr id="js-user-edit-tr">
                        <td>{{ chats.firstName}}</td>
                        <td>{{ chats.lastName }}</td>
                        <td>{{ chats.email }}</td>
                        <td><a href="{{ path('user_edit', {'id': chats.id}) }}" class="btn js-user-edit" >
                                <i class="far fa-edit "></i>
                            </a></td>
                        <td><a href="{{ path('user_delete', {'id': chats.id}) }}" class="btn js-user-remove">
                                <i class="fas fa-trash-alt"></i>
                            </a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}