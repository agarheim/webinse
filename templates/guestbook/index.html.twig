{% extends 'base.html.twig' %}

{% block title %}Hello, Welcome to My Chat Page!{% endblock %}

{% block body %}
    <div class="container">
      <div class="row">
       <div class="col-sm-12">
        <p>{{ form(form) }}</p>
        <h1>Hello! </h1>
        This friendly message is coming from:
       </div>
       <div class="col-sm-10">
            <table class="table table-hover">
               <thead>
                 <tr>
                   <th>FirstName</th>
                   <th>homePage</th>
                   <th>Email</th>
                   <th></th>
                   <th></th>
                 </tr>
               </thead>
               <tbody>
                {% for chats in appointments %}
                    <tr id="js-user-edit-tr">
                        <td>{{ chats.firstName}}</td>
                        <td>{{ chats.homePage }}</td>
                        <td>{{ chats.email }}</td>
                        <td><a href="{{ path('user_edit', {'id': chats.id}) }}" class="btn js-user-edit" >
                                <i class="far fa-edit "></i>
                            </a></td>
                        <td><a href="{{ path('user_delete', {'id': chats.id}) }}" class="btn js-user-remove">
                                <i class="fas fa-trash-alt"></i>
                            </a></td>
                    </tr>
                {% endfor %}
               </tbody>

                </tbody>
            </table>
            </div>
            <div class="navigation">
                    {{ knp_pagination_render(appointments) }}
            </div>
        </div>
    </div>
{% endblock %}